<Window x:Class="Geburtstagsliste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geburtstagsliste"
        mc:Ignorable="d"
        Title="GeburtstagsListe" Height="450" Width="450" Icon="/calenderIcon.png" >
    <Grid>
        <StackPanel>
            
            <Label HorizontalAlignment="Center" Margin="20">Geburtstagsliste</Label>
            
            <StackPanel Orientation="Horizontal">
                
                <Calendar x:Name="Calendar" Margin="15" DisplayMode="Month" SelectionMode="SingleDate" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
                
                <StackPanel Orientation="Vertical" Margin="15">
                    <TextBlock x:Name="textBlockTag" HorizontalAlignment="Left" Margin="0,0,0,10" Text="Tag im Kalender auswählen"></TextBlock>
                    <Label x:Name="labelName" Visibility="Hidden" HorizontalAlignment="Left">Name eingeben:</Label>
                    <TextBox x:Name="textBoxName" Visibility="Hidden" HorizontalAlignment="Left" Width="120" Margin="0,0,0,10"></TextBox>
                    
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="labelGeburtsjahr" Visibility="Hidden" HorizontalAlignment="Left">Geburtsjahr hinzufügen?</Label>
                        <CheckBox x:Name="checkBoxGeburtsjahr" Unchecked="checkBoxGeburtsjahr_Unchecked" Checked="checkBoxGeburtsjahr_Checked" Visibility="Hidden" HorizontalAlignment="Left" Margin="0,6,0,0"></CheckBox>
                    </StackPanel>
                    <ComboBox x:Name="comboBoxGeburtsjahr" Visibility="Hidden" HorizontalAlignment="Left" Width="120" Margin="0,0,0,10"></ComboBox>
                    <Button x:Name="buttonName" Click="buttonName_Click" HorizontalAlignment="Center" Visibility="Hidden" Width="120" Margin="10">Hinzufügen</Button>
                </StackPanel>
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>
